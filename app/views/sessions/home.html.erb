<!DOCTYPE html>
<html>
  <body>
    <div class="row">
<!-- start sidebar -->
<div class="col-md-4">
  <div class="card my-4 ">
    <h5 class="card-header upper left-bar-color">
      <i class="fas fa-filter "></i>&nbsp;FILTERS
    </h5>

    <div class="card-body">
      <div class="row">
        <div class="col-lg-6">
          <ul class="list-unstyled mb-0">
            <li class="mb-2">
              <i class="fas fa-globe mr-1"></i>
              <%= link_to "All Posts", posts_path %>
              
            </li>
            <li class="mb-2">
              <i class="fas fa-comment-slash mr-1"></i>
              <a href="/?filter=nocomments">No Comments</a>
            </li>
            <li class="mb-2">
              <i class="fas fa-comment-dollar mr-1"></i>
              <a href="/?filter=popular">Most Comments</a>
            </li>
          </ul>
        </div>
      </div>
    </div>

  </div>

  <!-- Categories -->
  <div class="card my-4">
    <h5 class="card-header upper left-bar-color">
      <i class="fas fa-list-ul"></i>&nbsp;CATEGORIES
    </h5>

    <div class="card-body">
      <div class="row">
        <div class="col-lg-9">
          <ul class="list-unstyled mb-0">
           
            <% Category.all.each do |category| %>
                <li class="mb-2">
                  <i class="fa fa-star" aria-hidden="true"></i>
                  <%= link_to category.name, category %>
                </li>
                 <% end %>   
            </ul>
          </div>
      </div>
    </div>

  </div>

</div>
<!-- end sidebar -->
<!-- Start Post --> 

  <div class="col-md-8">

 <% Post.all.order(created_at: :desc).each do |post| %> 
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title" style="text-transform:uppercase;">    
            <%= link_to (image_tag post.user.avatar, class: 'avatar'), post.user %>
            <span class="float-right text-small badge badge-warning">
              <%= post.category.name %>
            </span>
            <%= link_to post.title, post %> 
          </h5>
          <p class="card-text">
             <%= post.body %>
          </p>
        </div>
        <div class="float-right card-footer bar-color">
           Posted By : <%= link_to post.user.user_name, post.user, class: "bar-text" %> | <%= time_ago_in_words post.created_at %> ago 
           <span class="float-right text-small">  

          <% if post.comments.size > 0  %> <%= post.comments.size %> <i class="fa fa-comments" aria-hidden="true"></i>
          <% else %>Be the first comment!<% end %>
           
          </span>
          </div>
        
      </div>
 <% end %>


  
  </div>
<!-- End Post -->




     
  </div>
  </body>
</html>
