<!DOCTYPE html>
<html>

<body>
  <%= link_to "Back to Your Inbox", conversations_path %>
  <div class="row">
    <!-- start sidebar -->

    <div class="col-md-4">
      <div class="card my-4 ">
        <h5 class="card-header upper left-bar-color">
          <i class="fas fa-user-friends"></i>&nbsp; Friends
        </h5>

        <p class="card-title">

          <div class="card-body">
            <div class="ui list">
              <div class="item">
                <% @conversations.each do |conversation| %>

                <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>

                <% if conversation.sender_id == current_user.id %>
                <% recipient = User.find(conversation.recipient_id) %>
                <% else %>
                <% recipient = User.find(conversation.sender_id) %>
                <% end %>

                <%= link_to (image_tag recipient.avatar, class: 'avatar'), recipient %> &nbsp;&nbsp;
                <%= link_to recipient.user_name,   conversation_messages_path(conversation)%> <br>
                <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </p>

      </div>

    </div>
    <!-- end sidebar -->

    <!-- Start msg -->

    <div class="col-md-8 ">

      <h3 class="txt-blue"><%= @recipient.user_name %>&nbsp;&nbsp;<i class="fas fa-comment-dots"></i></h3>

      <hr>

      <% if @over_ten %>
      <%= link_to 'Show Previous', '?m=all' %>
      <% end %>

      <div class="ui segment">
        <% @messages.each do |message| %>
        <% if message.body %>
        <% user = User.find(message.user_id) %>
        <div class="item">
          <div class="content">
            <div class="header"><strong><%= user.user_name %></strong> <%= message.message_time %></div>
            <div class="list">
              <div class="item">
                <i class="right triangle icon"></i>
                <%= message.body %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
      <br>
      <%= form_for [@conversation, @message], html: {class: "ui reply form"} do |f| %>
      <div class="field">
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %>
      <div>
        <br>
        <div>
          <%= f.submit "Reply", class: 'btn btn-success' %>
        </div>
      </div>

      <% end %>






    </div>


    <!-- End msg -->
  </div>
</body>

</html>